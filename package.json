{
  "name": "webpack-template",
  "version": "0.1.0",
  "description": "基于 semantic-release 的自动化 release webpack项目模板",
  "author": "CaoMeiYouRen",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack --config ./webpack.config.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "dev:webpack": "cross-env NODE_ENV=development webpack --config ./webpack.config.js",
    "rm": "rimraf node_modules",
    "watch": "tsc -w",
    "start": "node ./dist/index",
    "release": "semantic-release",
    "commit": "git add . && git cz"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-cmyr-config": "^1.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "debug": "^4.3.1",
    "eslint": "^7.15.0",
    "eslint-config-cmyr": "^1.0.2",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.20",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.0",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.3",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add .",
      "commit-msg": "validate-commit-msg"
    }
  }
}
